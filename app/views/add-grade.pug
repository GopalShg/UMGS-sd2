include components/header
block content
  for row in results
    form(action="/add-grade-form/" method="post")
                    div.form-group
                        label(for="title") Student Name:
                        input(type="text" disabled value=row.name)
                        input(type="hidden" name="student_id"   value=row.id)

                    div.form-group
                        label(for="course_name") Course Name:
                        select(name="c_id" required)
                          each row2 in courses
                            option(value=row2.id) #{row2.name}
                            
                    div.form-group
                        label(for="grade")  Grade:
                            select(name="grade" required)
                              option(value="A++") A++
                              option(value="A+") A+
                              option(value="A") A
                              option(value="B++") B++
                              option(value="B+") B+
                    div.form-group
                        label(for="remarks") Remarks/Status:
                            select(name="remarks" required)
                              option(value="Excellent") Excellent
                              option(value="Good") Good
                              option(value="Need to work hard") Need to work hard
                    input(type="submit" value="Submit") 
            
include components/footer